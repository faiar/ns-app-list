    "jasmine-core": "^2.5.2",
    "jasmine2-custom-message": "^0.8.2",
    "karma": "^1.4.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.2",
